@model  WebStore.UI.Models.AddProductModelView
@{
    ViewBag.Title = "AddProduct";
}

<h2>Новый товар</h2>

@using (Html.BeginForm("AddProduct", "Main", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)


    @Html.Hidden("Id", Model.Product.Id)
    <div class="form-group">
        <label for="Name" class="col-xs-2 control-label">Название:</label>
        <div class="col-xs-10">
            @Html.EditorFor(m => m.Product.Name, new { id = "Name" }) @Html.ValidationMessageFor(m => m.Product.Name)
        </div>
    </div>
    <div class="form-group">
        <label for="CategoryName" class="col-xs-2 control-label">Категория:</label>
        <div class="col-xs-10">
            @Html.DropDownListFor(m => m.Product.CategoryName, new SelectList(Model.Category.Select(x => x.Name)), new { id = "CategoryName" }) @Html.ValidationMessageFor(m => m.Product.CategoryName)
        </div>
    </div>
    <div class="form-group">
        <label for="Price" class="col-xs-2 control-label">Цена:</label>
        <div class="col-xs-10">
            @Html.EditorFor(m => m.Product.Price, new { id = "Price" }) @Html.ValidationMessageFor(m => m.Product.Price)
        </div>
    </div>
    <div class="form-group">
        <label for="Description" class="col-xs-2 control-label">Описание:</label>
        <div class="col-xs-10">
            @Html.EditorFor(m => m.Product.Description , new { id = "Salary" }) @Html.ValidationMessageFor(m => m.Product.Description)
        </div>
    </div>
    <div class="form-group">
        <label for="Position" class="col-xs-2 control-label"></label>
        <div class="col-xs-10">
            <input type="submit" value="Добавить" class="btn btn-primary btn-lg" />
        </div>
    </div>
}

