
@model IEnumerable<WebStore.BusinessLogic.DTO.Product.ProductDTO>
@{
    ViewBag.Title = "Index";
}

<h2>Продукты</h2>

<table class="table table-hover table-striped table-bordered">

    <tbody>
        <tr>
            <th>Имя</th>
            <th>Категория</th>
            <th>Описание</th>
            <th>Цена</th>
        </tr>
        @foreach (var e in @Model)
        {
            <tr>
                <td>@e.Name</td>
                <td>@e.CategoryName</td>
                <td>@e.Description</td>
                <td>@e.Price</td>
            </tr>
        }
    </tbody>
</table>