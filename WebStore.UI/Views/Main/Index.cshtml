@model WebStore.BusinessLogic.DTO.Category.CategoryForDropDownList
@{
    ViewBag.Title = "Index";
    var list = ((IEnumerable<SelectListItem>)ViewBag.Categories).ToList();
    list.Add(new SelectListItem { Selected = true, Text = "", Value = "-1" });
    var ajaxOpt = new AjaxOptions{HttpMethod = "post",  OnSuccess = "onAjax"};
}

<h2>Добро пожаловать</h2>
<div id="error"></div>
@using (Ajax.BeginForm("UpdateList", "Main", ajaxOpt, new { @class = "form-inline" }))
{
    <div class="form-group">
        @Html.DropDownListFor(x => x.Id, list, new { @class = "form-control", id = "category" })
        @Html.ValidationMessageFor(x => x.Id)
    </div>
    <button type="submit" class="btn btn-primary">Применить</button>

    @section Scripts {
        <script type="text/javascript">
            function onAjax(response) {
                if (response == 'Redirect') {
                    //window.location = response.url;
                    $('#results').empty().html('<p class="text-danger">Необходимо выбрать категорию товара</p>');
                }
                else {
                    $('#results').empty().html(response)
                }
            }
        </script>
    }
}
<br>
<div id="results">
</div>
