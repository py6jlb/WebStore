@model IEnumerable<WebStore.UI.Models.Cart.CartProductWithQuatntity>
@{
    ViewBag.Title = "Корзина";
    Layout = "~/Views/Shared/_CartLayout.cshtml";
}

<h2>Корзина</h2>

@if (Model == null)
{
    <p class="text-danger">Вы не добавили не обного товара</p>
}
else
{
    <table class="table table-hover table-striped table-bordered">
        <tbody>
            <tr>
                <th>Имя</th>
                <th>Категория</th>
                <th>Цена</th>
                <th>Количество</th>
                <th>&nbsp;</th>
            </tr>
            @foreach (var e in @Model)
            {
                <tr>
                    <td>@e.product.Name</td>
                    <td>@e.product.CategoryName</td>
                    <td>@e.product.Price</td>
                    <td>@e.Quantity</td>
                    <td>
                        <a href= "@Url.Action("DelFromCart", "Cart", new { id = e.product.Id })" class="btn btn-danger">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}




